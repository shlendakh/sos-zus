generator client {
  provider = "prisma-client"
  output   = "prisma"
}

datasource db {
  provider = "postgresql"
}

model Case {
  id         String  @id @default(cuid())
  caseNumber String
  comments   String? // Functionary notes

  victimInfo   VictimInfo @relation(fields: [victimInfoId], references: [id])
  victimInfoId String

  reporterInfo   ReporterInfo @relation(fields: [reporterInfoId], references: [id])
  reporterInfoId String

  accidentInfo   AccidentInfo @relation(fields: [accidentInfoId], references: [id])
  accidentInfoId String

  cardOfAccident   File?   @relation(fields: [cardOfAccidentId], references: [id])
  cardOfAccidentId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// MARK: Poszkodowany
model VictimInfo {
  id      String @id @default(cuid())
  name    String
  surname String
  pesel   String

  dateOfBirth  DateTime
  placeOfBirth String

  documentType   DocumentType
  documentNumber String

  insuranceTitle String

  address Address[]
  cases   Case[]
}

// MARK: Informacje o zgłaszającym
model ReporterInfo {
  id          String   @id @default(cuid())
  name        String
  surname     String
  pesel       String
  dateOfBirth DateTime

  phoneNumber String?
  address     Address[]

  accidentInfoId String
  cases          Case[]
}

// MARK: Accident information

model AccidentInfo {
  id   String   @id @default(cuid())
  date DateTime

  place       String
  workStartAt Int
  workEndAt   Int

  injuries String // Description of injuries
  info     String // All details about the accident

  isMedicalAssistance String? // If yes, describe
  authority           String

  machineOperations   String? // If yes, describe
  isMachineAtestated  Boolean?
  isMachineFixedAsset Boolean?

  witnesses Witness[]

  isWorkAccident Boolean
  isVictimFault  String
  isDrunk        String

  cases Case[]
}

// MARK: Utils
enum DocumentType {
  PERSONAL_ID
  PASSPORT
}

enum AddressType {
  HOME
  CORESSPONDENCE
  BUSINESS
  CHILD_CARE
}

model Address {
  id         String @id @default(cuid())
  street     String
  city       String
  postalCode String
  district   String
  country    String

  type AddressType

  victimInfos   VictimInfo[]
  reporterInfos ReporterInfo[]
  witnesses     Witness[]
}

model File {
  id String @id @default(cuid())

  file Bytes

  cases Case[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Witness {
  id      String @id @default(cuid())
  name    String
  surname String

  address   Address @relation(fields: [addressId], references: [id])
  addressId String

  accidentInfo   AccidentInfo @relation(fields: [accidentInfoId], references: [id])
  accidentInfoId String
}
